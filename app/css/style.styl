body
	@extend .type--main
	font-family $font
	color black
	line-height 1.4

.main-cont
	center(1630px,20px)
.main-cont--md
	center(1370px,20px)
.main-cont--sm
	center(900px,20px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end


.scroll-template-light
	+above(1025px)
		&::-webkit-scrollbar
			-webkit-appearance: none
			width: 4px
			height: 8px
			background: #f8f8f8
			border-radius: 4px
		&::-webkit-scrollbar-thumb
			border-radius: 4px
			background: $border-color
		scrollbar-color #DCDFE8 #f8f8f8
		scrollbar-width thin
		overscroll-behavior contain


// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto
	-webkit-overflow-scrolling: touch

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: rgba(32, 34, 44, 0.5);
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	width 410px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0
	&.modal-msg
		top 50%
		left 0
		opacity: 1
		position: fixed
		transform translate(-100%,-50%)
		z-index 1000
		&.active
			transform translate(0%,-50%)

		.modal-content
			border-radius 0
			box-shadow: 0px 16px 40px rgba(41, 42, 53, 0.32);
.modal--md
	+below(640px)
		width: 100%
	width 632px

.modal--mdx
	+below(640px)
		width: 100%
	width 476px

.modal-content
	+below(640px)
		height: 100%
		//overflow-y scroll
		width: calc(100% - 40px)
		padding: 20px
	+below(340px)
		padding: 24px 16px
	margin: 60px auto
	background: white
	position: relative
	padding: 32px
	br(16px)

.modal-content--clear
	padding: 0!important

.modal__show
	//max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity
	margin auto

.modal-close
	+below(640px)
		right 20px
	position: absolute
	top: 20px
	right: 0px
	cp()
	z-index 10
	&:hover
		.icon
			fill $mark
	.icon
		tr()
		fill white
		size 28px
.modal-close--mark
	background: $fieldBackground
	round()
	size 28px
	flex(mid)
	.icon
		size 16px
		fill black
.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

// modal === end

// slider menu
// slider menu
.head-toggle
