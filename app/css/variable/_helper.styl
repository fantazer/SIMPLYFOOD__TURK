.disabled
	cursor default
	opacity .5
	pointer-events none

.hidden
	display none !important

.hide
	display none

.show
	display block !important

.invis
	visibility hidden

.old-browser
	background grey
	width 100%
	height 100vh
	padding-top 200px

.old-browser-text
	text-align center
	color white
	font-size 20px

.msg
	padding: 8px 16px
	br(10px)

// fix iphone input bug
@media screen and (-webkit-min-device-pixel-ratio:0)
	select:focus,
	textarea:focus,
	input:focus
		font-size: 16px;
		background: #eee;

@media screen and (-webkit-min-device-pixel-ratio:0)
	select,
	textarea,
	input
		font-size: 16px!important
// fix iphone input bug === end

.pos-r
	position relative

.pos-a
	position absolute

.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important

.hideMobileScroll
	+below(1024px)
		&::-webkit-scrollbar
			background-color:transparent!important
			display none
			 -webkit-appearance: none;

.cp
	cp()

.tr
	tr()

.sm__cover-size
	+below(640px)
		margin-left: -20px
		margin-right -20px
		width calc(100% + 40px)
.h-100
	height: 100%

