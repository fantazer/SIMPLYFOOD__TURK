// config
.config
	height: 0
	//overflow: hidden
	position absolute
	left -9999px
	opacity: 0
	transition opacity .8s, transform .8s
	transform: scale(.95, .95)
	+below(1024px)
		max-width 640px
		margin-left auto
		margin-right auto
	&.active
		position: static
		left 0
		transform: scale(1, 1)
		opacity: 1
		height: auto

.config-descr
	height: 0
	overflow: hidden
	opacity: 0.2
	transition opacity .8s, transform .8s
	transform: scale(.95, .95)

	&.active
		transform: scale(1, 1)
		opacity: 1
		height: auto

.config-nav
	+below(640px)
		overflow: auto
		margin-left: -20px
		margin-right: -20px
		padding: 20px
		justify-content space-between
	flex(mid)
	
.config-nav__el
	+below(640px)
		margin-right: 20px
	flex(mid)
	br(8px)
	box-shadow: 0px 4px 8px rgba(102, 130, 185, 0.12)
	border 1px solid transparent
	padding: 18px 36px
	margin-right: 40px
	cp()
	transition color .4s
	white-space nowrap
	&:last-child
		margin-right: 0
	&:hover
