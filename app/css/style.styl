// accordion
.accordion
	+below(640px)
		width 100%

	opacity: 0
	left -9999px
	visibility: hidden
	position absolute
	transform translateX(10px)
	transition opacity 1.2s, transform .8s
	&.active
		transform translateX(0px)
		visibility: visible
		opacity: 1
		left initial
		position: static
.accordion__el
	border 1px solid #e5e5e5
	margin-top: -1px
	background: white
	cp()
	&:hover
		.accordion__el-head-icon
			&:before
				content ''
				background: $green
			&:after
				content ''
				background: $green
	&:first-child
		border-radius 10px 10px 0 0
	&:last-child
		border-radius  0 0 10px 10px
.accordion__el-head
	+below(640px)
		padding: 20px
	padding: 30px 40px
	flex(between)
	color black
	&.active
		.accordion__el-head-text
			color $green
		.accordion__el-head-icon
			&:after
				content ''
				transform rotate(45deg)
			&:before
				content ''
				transform rotate(45deg)
.accordion__el-head-text
	+below(640px)
		line-height: 1.6
	@extend .type--md
	width: 80%
	font-weight: 700

.accordion__el-head-icon
	+below(640px)
		size 16px
	position: relative
	size 24px
	&:before
		content ''
		tr(all)
		height: 2px
		width: 100%
		background: black
		position: absolute
		top calc(50% - 1px)
	&:after
		content ''
		tr(all)
		height: 100%
		width: 2px
		background: black
		position: absolute
		left calc(50% - 1px)

.accordion__el-content
	+below(640px)
		padding:0 20px 20px 20px
	padding: 0 40px 40px 40px
	display: none
	p
		color $typePrimary
		&:first-child
			margin-top: 0
		&:last-child
