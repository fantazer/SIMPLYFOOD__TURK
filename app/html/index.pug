include block_html/_style.pug
include block_html/_const.pug
include block_html/_include.pug

.page
	+header()
	.main-banner-wrap
		.main-cont
			.main-banner
				.main-banner__cont
					.main-banner__info
						.main-banner-subTitle.type--mdx.type--700.mb-24.sm__mb-4 Biletiniz lezzetli ve sağlıklı yaşam içindir
						.main-banner-title.type--lgx.type--800.mb-48 Hazır diyet programları hızlı ve rahat kilo kaybı içindir
						.f.gap-20.w100
							a(href="#navMenu").btn.btn--md.btn--white.btn--mobile.js-scroll-to Başla
							a(href="#navMenu").btn.btn--md.btn--empty-white.md__hide.js-scroll-to
								.f.f-mid.gap-12
									span Menüyü gör
									+icon("arrow-right","icon icon--md")
				.main-banner__img
					.main-banner__img-el(style="background-image:url('img/universe/bg-el-2.png')")
	.content
		#navAdvantages.section.pt-120.pb-120.bg--snow.pt-
			.main-cont
				.title.type--lgx.type--800.type--mid.mb-48 Nasıl çalışıyor
					.title__shadow Nasıl çalışıyor
				.f.f-jcc.fw.g-gap-24
					-
						var items = [
							{"icon": "step--color", "title": "En iyi ürünleri seçin.", "modal": "Organic"},
							{"icon": "food--color", "title": "Profesyonel beslenme uzmanı tarafından en uygun kalori hesabıyla diyet programı hazırlıyor.", "modal": "Cooking"},
							{"icon": "cooking--color", "title": "Profesyonel aşçılar tarafından lezzetli ve sağlıklı yemekler hazırlanıyor.", "modal": "Cooking"},
							{"icon": "container--color", "title": "Kuryeler günün her vaktinde bulunduğunuz yere istediğiniz zamanda paket servisi yapıyorlar. ", "modal": "Cooking"},
							{"icon": "winner--color", "title": "Yaşasın! Hem kilonuzdan hem de vaktinizden tasarruf ediyorsunuz!", "modal": "Cooking"},
						];
					each item in items
						.bg--white.br--20.p-48.w30.lg__w100
							.f.f-column.f-mid.w100
								+icon(item.icon,"icon icon--100 mb-24")
								.type--700.type--md.type--mid=item.title
		#navMenu.section.pt-120.pb-120
			.main-cont--sm
				.type--lgx.type--mid.type--800.mb-36 Günlük beslenme programı <br> için örnek menü
			.config-wrap.js-tab-wrap
				//.main-cont--sm
					.config-nav.mb-64.hideMobileScroll.js-tick-cont.sm__mb-4
						.config-nav__el.js-tick.js-tab.active
							+icon("fit","icon")
							.type--main Kilo kaybı
						.config-nav__el.js-tick.js-tab
							+icon("figure","icon")
							.type--main Formda kalmak
						.config-nav__el.js-tick.js-tab.config-nav__el--disable.js-disable.pos-r
							+icon("strong","icon icon--typeDisable")
							.type--typeDisable Kilo almak
							.config-nav__el--disable-text pek yakında
				.main-cont--md
					each racionListEl,k in racionList
						.config.js-tab-cont(class=k === 0 ? 'active' : '')
							.row.g-gap-40
								.config-slider__el.g-1-6.lg__g-1-12
									img(src="img/universe/item-" + (k + 1) + ".jpg", alt="").w100
								.config-content.g-7-12.lg__g-1-12.js-tab-wrap
									.f.f-aic.g-gap-12.mb-36.day-list.hideMobileScroll.js-tick-cont
										-
											var items = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
										each item,i in items
											.config-day.br--8.shadow-xl.p-16.f.f-mid.f-column.cp.js-tick.day-list__el.js-tab(class=i === 0 ? 'active' : '')
												.type--700.mb-4 #{item}
												.type--typePrimary 03/0#{i + 4}
									each racionListItem,l in racionListEl
										.config-descr.js-tab-cont(class=l === 0 ? 'active' : '')
											.text
												ul
													each racionListItemData,m in racionListItem
														li=racionListItemData

											.f.f-aic.g-gap-20.lg__fw
												a(href="/order.html").btn.btn--md.btn--mark.lg__w100.lg__order-2 Abone ol
												.type--700.type--mdx.lg__order-1 Günde  13$




		//.section.pt-120.pb-120.bg--snow
			.main-cont
				.banner-preview
					.banner-preview__img(style="background-image:url('img/universe/bg-1.jpg')")
					.banner-preview__info
						.text.mb-36
							.type--lgx.type--800.mb-20 Çevreye özen <br> göstermek
							p Yemek kaplarımız insan sağlığını olumsuz etkileyen zararlı ve toksik maddeler içermez ve doğaya zarar vermeden toprakta tamamen ayrışır - %100 doğa dostu.
							p Çatal bıçak takımını yalnızca sipariş verirken isteğiniz üzerine siparişe dahil edeceğiz.
						a(href="#navMenu").btn.btn--md.btn--mark.btn--mobile.js-scroll-to Sipariş ver


		.section.bg--snow
			.main-cont
				.f.md__fw
					.extendUp-img-wrap.block.w50.md__w100.md__order-2
						img(src="img/banner-1.png", alt="").extendUp-img
					.f.block.w35.f-mid.pt-48.pb-48.lg__w50.md__w100
						.text
							.type--lgx.type--800.mb-20 Sizin için uygunsa eğer;
							ul
								li kilo vermek istiyorsanız
								li diyet planınızı sürekli bozuyorsanız
								li Öğünler arasında şekerleme ya da fast food atıştırıyorsanız
								li Sağlıklı yemek hazırlamaya zamanınız yoksa
								li Evin yakınında ki süpermarket de kalitesiz ürünler bulunuyorsa
								li  Kafeler ve restoranlarda içeriği belli olmayan yemekler bulunuyorsa

							p
								strong Sadece özenle seçilmiş, yüksek kaliteli malzemelerden yapılmış en sağlıklı yiyecekleri mi yemek istiyorsunuz?
							p
								strong Cevabınız evet ise, SimplyFood sizin için mükemmel bir çözümdür.

		#navReview.section.pt-120.pb-120
			.main-cont
				.title.type--lgx.type--800.type--mid.mb-48 Yorumlar
					.title__shadow Yorumlar
				.review-slider
					.review-slider__el
						.review-slider__el-img(style="background-image:url('img/review-5.jpg')")
						.review-slider-wrap
							.type--blue.mb-20 @Avşar
							.review-slider-content.scroll-template-light
								.review-slider-text.text
									p VE BİR KEZ SAĞLIKLI BESLENME HAKKINDA. Sanatçıların çok yoğun bir programa sahip olduğu bir sır değil ve hayatın yoğun temposuna rağmen mutfakta vakit kaybetmeden nasıl iyi besleneceğim ve nasıl zayıf kalabilirim her zaman akıllarında bir soru olmuştur. 🍛
					.review-slider__el
						.review-slider__el-img(style="background-image:url('img/review-6.jpg')")
						.review-slider-wrap
							.type--blue.mb-20 @Gumuş
							.review-slider-content.scroll-template-light
								.review-slider-text.text
									p 🍝Yiyecek🍜 <br>	Üç buçuk aydır günlük ihtiyacımın 1000-1500 kalorilik kısmını yiyerek karşılıyorum ve fark edilir şekilde kilo verdim. Bu süre zarfında, bunu seçmeden önce epeyce yemek dağıtım hizmeti denedim.
					.review-slider__el
						.review-slider__el-img(style="background-image:url('img/review-8.jpg')")
						.review-slider-wrap
							.type--blue.mb-20 @Vahide
							.review-slider-content.scroll-template-light
								.review-slider-text.text
									p Herkese iyi günler! .... beslenme sistemine geçtiğimi sizlerle paylaşmak isterim. Henüz işe gelmediğimi belirtmek isterim ama öğle yemeğimin şimdiden beni bekliyor olması))) paket servisin olumlu yanı. Porsiyonlar küçük ama kilo vermek için hafif programını seçtim. Seçmiş olduğum programımdan memnunum, çünkü günde 5 öğün gayet yeterli.
					.review-slider__el
						.review-slider__el-img(style="background-image:url('img/review-7.jpg')")
						.review-slider-wrap
							.type--blue.mb-20 @Wabile
							.review-slider-content.scroll-template-light
								.review-slider-text.text
									p Benim yeni aşkım! ... ıspanaklı waffle. İki hafta 1000-1100 kalorilik hafif bir diyet: lezzetli ve basit. Evet, ilk üç gün canım yemek istedi ama bu daha çok zihinsel bir şeydi. Aslında günde beş kez yemek yiyorum ve programın sonunda öğleden sonra atıştırmasını birkaç kez unuttuğumu fark ettim. Oh, oh, oh.


		#navTrial.section.pt-120.pb-120.subs-banner(style="background-image:url('img/bg-2.jpg')")
			.main-cont
				.type--lgx.type--800.type--white.mb-12 5 günlük deneme ile başlayın
				form.wmax-545.mb-24.js-validate(
					action="javascript:void(null);"
					data-open_modal="subscribe"
				)
					.g-1-4
						.type--md.type--white.mb-48 Sadece 60$'a 5 Günlük Yemek Deneme Seti sipariş edin
						.input-row.mb-16
							.input-row
								input(
									class="input js-input-data"
									type="tel"
									name="phone[1]"
									placeholder="Telefon"
									data-type="phone"
									data-condition="phone"
									inputmode="numeric"
								)
					button(type="submit").btn.btn--mark.btn--md.btn--mobile Başla

		//#navHow.section.pt-120.pb-120.bg--snow
			.main-cont
				.title.type--lgx.type--800.type--mid.mb-48 Nasıl çalışır
					.title__shadow Nasıl çalışır
				.g.gap-20.g-3.sm__g-1
					.work-el.bg--white.br--20
						+icon("check-step--color","icon")
						.work-el-title.type--md.type--700.mb-16.pos-r.w100 Bir istek gönderin
							.brush(style="background-image:url('img/brush.svg')")
						.type--main İnternet üzerinden veya telefonla yemek siparişi verin. Programın başlangıç tarihini ayarlayın ve menüyü değiştirmek isterseniz bize bildirin.
					.work-el.bg--white.br--20
						+icon("food-step--color","icon")
						.work-el-title.type--md.type--700.mb-16.pos-r.w100 Sipariş al
							.brush(style="background-image:url('img/brush.svg')")
						.type--main Her sabah kuryemiz yemekleri hazırladıktan hemen sonra size teslim eder. Teslim aldıktan sonra buzdolabında saklayınız.
					.work-el.bg--white.br--20
						+icon("winner-step--color","icon")
						.work-el-title.type--md.type--700.mb-16.pos-r.w100 Lezzetli ve sağlıklı yiyin
							.brush(style="background-image:url('img/brush.svg')")
						.type--main Öğünlerinizden her gün en iyi şekilde yararlanın. Yemeden önce sadece ısıtmanız gerekiyor.


		#navFaq.section.pt-120.pb-120.bg--snow
			.main-cont--md
				.title.type--lgx.type--800.type--mid.mb-48 FAQ
					.title__shadow FAQ
				.faq-wrap
					.js-accordion.js-tab-cont
						-
							var items = [
								{
									"question": "Öğünleri ne sıklıkla yemeliyim?",
									"responce": "2.5-3 saatte bir yemenizi öneririz."
								},
								{
									"question": "Menüye kim karar veriyor?",
									"responce": "Profesyonel yetenekli beslenme uzmanı tarafından şefimizin teknolojik haritalarına ve tariflerine dayanarak menülerimiz düzenlenmektedir."
								},
								{
									"question": "Menü ne sıklıkla güncellenir?",
									"responce": "Her hafta tüm diyetlerimizi değiştiriyoruz. Haftalık yemek paketlerimiz, diyet yemeklerinin her gün tekrarlanmaması için tasarlanmıştır. Aylık menüyü her 3 ayda tamamen güncelliyoruz"
								},
								{
									"question": "Teslimatlar her hafta ne sıklıkla yapılıyor?",
									"responce": "Sağlıklı yemek dağıtım hizmeti, akşam veya sabah, seçtiğiniz sağlıklı beslenme programlarının günlük dağıtımını sağlar. Yemeklerimizi hazırlıyor ve hemen teslim ediyoruz, yemeklerimizin her zaman lezzetli ve taze olmasını sağlıyoruz. Kurye 20 dakika içinde adresinize teslim edecektir. Kurye daha sonra bir sonraki adrese gider."
								},
								{
									"question": "Yemekleri kaplarda tekrar ısıtmak mümkün mü?",
									"responce": "Yiyecekleri paketlemek için mikrodalga fırında ısıtılabilen tepsi şeklinde ısıya dayanıklı ambalajlar kullanıyoruz.Tavsiye edilen ısınma süresi 1-2 dakikadır."
								},
								{
									"question": "Hangi ürünleri kullanıyorsunuz?",
									"responce": "Et, süt, tahıl, sebze ve meyveleri sadece tedarik edilen ürünler için uygunluk belgesine sahip tedarikçilerden satın alıyoruz. Alımlar günlük yapılır."
								},
							];
						each item,i in items
							.accordion__el.js-accordion-el
								.accordion__el-head.js-accordion-head
									.accordion__el-head-text #{i + 1}. #{item.question}
									.accordion__el-head-icon
								.accordion__el-content.text.js-accordion-content #{item.responce}

		#navDelivery.delivery-cont
			.main-cont--md
				.delivery-msg-wrap
					.delivery-msg
						.type--lgx.type--800.mb-24 Teslimat
						.text
							p Düzenli olarak (günlük veya iki günde bir) teslimat yapıyoruz. Seçiminize göre her sabah ya da akşam
						//.deliver-pick__el
							.deliver-pick__el-color(style="background:#7ECA1D")
							.deliver-pick__el-text Доставляем бесплатно
						//.deliver-pick__el
							.deliver-pick__el-color(style="background:#6b33b3")
							.deliver-pick__el-text Доставка стоит 250 р.
			.map
				iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6117.854387588762!2d32.82990513331299!3d39.94301818780337!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34f495425b4b1%3A0x10318ce043b24413!2sMerkez%20Ankara!5e0!3m2!1str!2sru!4v1649165302480!5m2!1str!2sru" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" zoomControl="true")
				//script(charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A83eda55a6c987e2db4be6f36278f36ac8ff89bb1d4d6303900011bd2b33ec80c&amp;width=100%&amp;height=100%&amp;lang=en_US&amp;scroll=false")
	+footer()
	+modal()

